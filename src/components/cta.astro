---
import { Icon } from 'astro-icon'
import { SiteMetadata } from '../config'
---

<div
  class="bg-white dark:bg-black flex items-center border-t-[1px] border-zinc-900"
>
  <div
    class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:py-16 lg:px-8 lg:flex lg:items-center lg:justify-between"
    x-data="{shown: false}"
    x-intersect:full="shown = true"
    x-intersect:leave="shown = false"
  >
    <div
      class="text-center xs:text-left"
      x-show="shown"
      x-transition:enter="transition ease-out duration-300 transform"
      x-transition:enter-start="opacity-50 translate-y-6"
      x-transition:enter-end="opacity-100 translate-y-0"
      x-transition:leave="transition ease-in duration-75 transform"
      x-transition:leave-start="opacity-100 translate-y-0"
      x-transition:leave-end="opacity-50 translate-y-6"
    >
      <h2
        class="text-3xl xs:text-2xl font-extrabold tracking-tight text-gray-900 dark:text-gray-100 sm:text-4xl"
      >
        <span class="block dark:text-white"
          >Want the latest news from RnDAO?</span
        >
      </h2>
      <p class="text-gradient-basic text-3xl xs:text-2xl sm:text-4xl pb-1">
        Subscribe on mirror.xyz today.
      </p>
      <div class="form-control mt-5 w-full sm:max-w-2xl">
        <a
          href="https://rndao.mirror.xyz/"
          rel="noopener noreferrer"
          target="_blank"
          title="Visit RnDAO on mirror.xyz"
          class="btn btn-subtle glass bg-zinc-700 self-center xs:self-start text-sm w-3/4 xs:w-1/2"
        >
          <span class="inline bg-transparent">RnDAO Mirror</span>
        </a>
      </div>
    </div>
    <div
      class="mt-8 flex lg:mt-0 lg:flex-shrink-0"
      x-show="shown"
      x-transition:enter="transition ease-out duration-300 delay-200 transform"
      x-transition:enter-start="opacity-0 translate-y-6"
      x-transition:enter-end="opacity-100 translate-y-0"
      x-transition:leave="transition ease-in duration-75 transform"
      x-transition:leave-start="opacity-100 translate-y-0"
      x-transition:leave-end="opacity-0 translate-y-6"
    >
