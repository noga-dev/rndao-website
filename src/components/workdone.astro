---
import SVGImg from '../components/svgimg.astro'
import Img from '../components/img.astro'
import { FeaturedSVG } from '../config'

const frontmatter = {
  aragonLogo: '../images/orgs/aragon.png',
  polygonLogo: '../images/orgs/polygon.png',
  sobolLogo: '../images/orgs/sobol.png',
}
---

<div
  class="relative bg-zinc-300 dark:bg-zinc-900 lg:dark:bg-zinc-700 border-t-[1px] border-white dark:border-zinc-900 overflow-hidden w-full sm:h-screen"
>
  <svg
    class="hidden lg:block absolute left-1/2 -top-1 inset-y-0 sm:h-screen w-48 text-white dark:text-zinc-900 transform -translate-x-2/3 z-[1] filter drop-shadow-lg shadow-black"
    fill="currentColor"
    viewBox="0 0 100 100"
    preserveAspectRatio="none"
    aria-hidden="true"
  >
    <polygon points="50,0 100,0 50,100 0,100"></polygon>
  </svg>
  <svg
    class="hidden lg:block absolute left-1/2 -inset-y-0 sm:h-screen w-48 text-black dark:text-black transform -translate-x-2/3 z-0 opacity-50 blur-xl"
    fill="currentColor"
    viewBox="0 0 100 100"
    preserveAspectRatio="none"
    aria-hidden="true"
  >
    <polygon points="50,0 100,0 50,100 0,100"></polygon>
  </svg>
  <div
    class="hidden lg:block lg:absolute inset-y-0 left-0 sm:h-screen w-1/2 bg-white dark:bg-zinc-900 lg:-translate-x-8 z-[2]"
  >
  </div>
  <div class="xl:max-w-6xl 2xl:max-w-7xl mx-auto h-full">
    <div
      class="z-10 relative pb-8 sm:pb-16 md:pb-20 lg:pb-28 xl:pb-32 px-5 lg:px-0"
    >
      <main
        class="relative flex flex-col lg:flex-row justify-between pt-10 mx-auto w-full sm:h-screen xl:max-w-6xl 2xl:max-w-7xl sm:pt-12 md:pt-16 lg:pt-20 xl:pt-0 z-20"
        x-data="{shown: false}"
        x-intersect:half="shown = true"
        x-intersect:leave="shown = false"
      >
        <div
          class="text-left sm:self-center w-full lg:w-1/2 lg:max-w-lg"
          x-show="shown"
          x-transition:enter="transition ease-out duration-300 transform"
          x-transition:enter-start="opacity-50 translate-y-6"
          x-transition:enter-end="opacity-100 translate-y-0"
          x-transition:leave="transition ease-in duration-75 transform"
          x-transition:leave-start="opacity-100 translate-y-0"
          x-transition:leave-end="opacity-50 translate-y-6"
        >
          <h2
            class="text-2xl xs:text-4xl text-left tracking-tight font-heading font-black text-zinc-900 dark:text-zinc-50 sm:text-3xl md:text-3xl"
          >
            <span class="block xl:inline">Work we have done.</span>
          </h2>
          <p
            class="mt-3 text-base text-gray-600 dark:text-zinc-300 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-3 md:text-lg lg:mx-0"
          >
            Articles published on mirror.xyz
          </p>
          <ul
            class="grid my-5 lg:my-8 w-full gap-3 lg:gap-5 list-none text-sm 2xl:text-base"
          >
            <li>
              <a
                href="https://rndao.mirror.xyz/Qn0Y71EYRUB-6Kn0jH47baWulXoIe-dmTYIVuJeEOt8"
                target="_blank"
                rel="nofollow noopener">9 key Challenges of SubDAOs</a
              >
            </li>
            <li>
              <a
                href="https://rndao.mirror.xyz/gNwffffROGdAp1tEBhkRPEL8OAQqvUOlV5HuM9VBaoM"
                target="_blank"
                rel="nofollow noopener">Why and How we SubDAO</a
              >
            </li>
            <li>
              <a
                href="https://rndao.mirror.xyz/fsCGRlYR5rieDCVPnAnSAGL98wNWJyFbf1T_A2r-_6Y"
                target="_blank"
                rel="nofollow noopener">How to Measure Community Health</a
              >
            </li>
            <li>
              <a
                href="https://rndao.mirror.xyz/1zGqbsh1YZNi3I9yvtk_2VMcpyg_dvHF1GlZ_LAO3p4"
                target="_blank"
                rel="nofollow noopener">Whatâ€™s a DAO? Conceptual Foundations</a
              >
            </li>
          </ul>
        </div>
        <div
          class="mt-5 sm:mt-0 lg:w-1/2 lg:max-w-lg self-center justify-self-end"
          x-show="shown"
          x-transition:enter="transition ease-out duration-300 transform"
          x-transition:enter-start="opacity-50 translate-y-6"
          x-transition:enter-end="opacity-100 translate-y-0"
          x-transition:leave="transition ease-in duration-75 transform"
          x-transition:leave-start="opacity-100 translate-y-0"
          x-transition:leave-end="opacity-50 translate-y-6"
        >
          <h2
            class="text-2xl xs:text-4xl text-left tracking-tight font-heading font-black text-zinc-900 dark:text-zinc-50 sm:text-3xl md:text-3xl"
          >
            <span class="block xl:inline">Teams we have helped.</span>
          </h2>
          <div class="grid grid-cols-3 mt-8 mb-8 w-full gap-5 list-none">
            <div class="rounded-md overflow-hidden bg-zinc-300">
              <Img
                src={frontmatter.aragonLogo}
                alt="Aragon"
                width="150"
                height="150"
                class="object-cover w-full h-full"
              />
            </div>
            <div class="rounded-md overflow-hidden bg-zinc-300">
              <Img
                src={frontmatter.polygonLogo}
                alt="Polygon"
                width="150"
                height="150"
                class="object-cover w-full h-full"
              />
            </div>
            <div class="rounded-md overflow-hidden bg-zinc-300">
              <Img
                src={frontmatter.sobolLogo}
                alt="Sobol"
                width="150"
                height="150"
                class="object-cover w-full h-full"
              />
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>
</div>
